<% if notice %>
  <div id="notice_wrapper">
    <p class="notice"><%= notice %></p>
  </div>
<% elsif alert %>
  <div id="notice_wrapper"> 
    <p class="alert"><%= alert %></p>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    setTimeout(function() {
      $('#notice_wrapper').fadeOut("slow", function(){
        $(this).remove();
      });
    }, 4500);
  });
</script>

