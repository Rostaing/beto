<% provide(:title, "Sign up") %>
<div class="container input-field col s6" style="padding-top: 12px;">
  <div class="row">
    <!-- <div class="col-lg-4 col-md-8 m-auto"> -->
      <!-- <div class="login-page-content"> -->
        <!-- <div class="login-form"> -->
        <div class="well">
          <h3 class="text-center" style="font-family: 'Tangerine', serif;
          font-size: 48px;
          text-shadow: 4px 4px 4px #aaa;"><%= t('.sign_up') %></h3>
           <!-- <h5 class="text-center">Welcome!</h5> -->
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= bootstrap_devise_error_messages! %>

              <div class="form-group">
                <%# f.label :email %>
                <i class="glyphicon glyphicon-user"></i><%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control', placeholder: "Username" %>
              </div>

              <div class="form-group">
                <%# f.label :email %>
              <i class="
glyphicon glyphicon-envelope"></i><%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: "Email" %>
              </div>

              <div class="form-group">
                <%# f.label :password %>
                <i class="
glyphicon glyphicon-lock"></i><%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: "Password" %>

                <% if @minimum_password_length %>
                  <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
                <% end %>
              </div>

              <div class="form-group">
                <%# f.label :password_confirmation %>
                <i class="
glyphicon glyphicon-lock"></i><%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control', placeholder: "Password confirmation" %>
              </div>

              
              <div class="form-group">
                <%= f.submit t('.sign_up'), class: 'btn btn-primary' %>
              </div>
          <% end %>

          <%= render 'devise/shared/links' %>
        <!-- </div> -->
            <!-- div class="login-other">
               <span class="or">or</span>
                 <a href="#" class="login-with-btn facebook"><i class="fa fa-facebook"></i> Login With Facebook</a>
                 <a href="#" class="login-with-btn google"><i class="fa fa-google"></i> Login With Google</a>
           </div> -->
           <!-- <div class="create-ac">
                <p>Have an account? <%# link_to "Sign in", new_user_session_path %></p>
           </div> -->
           <div class="text-center bg-danger">
                <%= link_to "About", about_path %>
                <span>|</span>
                <%= link_to "Contact", new_contact_path %>
           </div>
          </div>
        <!-- </div> -->
      <!-- </div> -->
    <!-- </div> -->
  </div>
</div>

