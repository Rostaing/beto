<% provide(:title, "Edit user") %><br>
<div class="container" class="input-field col s6" style="padding-top: 12px;">
  <div class="row">
    <!-- <div class="col-lg-4 col-md-8 m-auto"> -->
      <!-- <div class="login-page-content"> -->
          <!-- <div class="login-form"> -->
            
        <div class="well">
          <h3 class="text-center" style="font-family: 'Tangerine', serif;
          font-size: 48px;
          text-shadow: 4px 4px 4px #aaa;"><%= t('.title', resource: resource_name.to_s.humanize) %></h3>
              <!-- <h5 class="text-center">Edit your count!</h5> -->
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= bootstrap_devise_error_messages! %>
                  <div>
                    <%= gravatar_tag @user.email, :size => 60 %>
                  </div><br>
                    <div class="form-group">
                    <%# f.label :email %>
                    <i class="glyphicon glyphicon-user"></i><%= f.text_field :username, autofocus: true, autocomplete: 'username', class: 'form-control', placeholder: "Username" %>
                    </div>

                    <div class="form-group">
                      <%# f.label :email %>
                      <i class="
glyphicon glyphicon-envelope"></i><%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: "Email" %>
                    </div>

                    <div class="form-group">
                      <%# f.label :password %>
                      <i class="
glyphicon glyphicon-lock"></i><%= f.password_field :password, autocomplete: 'new-password', class: 'form-control', placeholder: "Password" %>

                      <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
                    </div>

                    <div class="form-group">
                      <%# f.label :password_confirmation %>
                      <i class="
glyphicon glyphicon-lock"></i><%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control', placeholder: "Password confirmation"  %>
                    </div>

                    <div class="form-group">
                      <%# f.label :current_password %>
                      <i class="
glyphicon glyphicon-lock"></i><%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control', placeholder: "Current password" %>

                      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
                    </div>
          <!-- </div> -->

                    <div class="form-group">
                      <%= f.submit t('.update'), class: 'btn btn-primary' %>
                    </div>
                  <% end %>

              <!-- <p><%# t('.unhappy') %>?</p>
              <p><%# link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-danger" %></p><br>
              <%# link_to t('.back'), :back, class: "btn btn-primary" %>
              </div> -->
              <div class="text-center bg-danger">
                <%= link_to "About", about_path %>
                <span>|</span>
                <%= link_to "Contact", new_contact_path %>
              </div>
        </div>
    <!-- </div> -->
  </div>
</div>

