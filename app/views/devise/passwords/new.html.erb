<% provide(:title, "Forgot your password") %>
<div class="container" style="padding-top: 25px;">
	<div class="row">
		<!-- <div class="col-lg-4 col-md-8 m-auto"> -->
            <!-- <div class="login-page-content"> -->
                <!-- <div class="login-form"><br> -->
                	
				   <div class="well">
				   	<h3 class="text-center" style="font-family: 'Tangerine', serif;
					  font-size: 48px;
					  text-shadow: 4px 4px 4px #aaa;"><%= t('.forgot_your_password') %></h3>
						<!-- <h5 class="text-center">Your Email</h5> -->
						 <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
					     <%= bootstrap_devise_error_messages! %>

						   <div class="form-group">
								<%# f.label :email %>
								<i class="
glyphicon glyphicon-lock"></i><%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: "Email" %>
						   </div>
							<!-- <br> -->
						   <div class="form-group">
							 <%= f.submit t('.send_me_reset_password_instructions'), class: "bg-primary" %>
							
							 <% end %>
						   </div>
					       <%= render 'devise/shared/links' %>

		                     <div class="text-center bg-danger">
		                        <%= link_to "About", about_path %>
		                        <span>|</span>
		                        <%= link_to "Contact", new_contact_path %>
		                     </div>
		      
		           </div>
		  <!-- </div> -->
	   <!-- </div> -->
	<!-- </div> -->
  </div>
</div>


