<% provide(:title, "Sign in") %>
  <div class="container input-field col s6" style="padding-top: 12px;">
    <div class="row">
      <!-- <div class="col-lg-4 col-md-8 m-auto"> -->
            <div class="well">
              <h3 class="text-center" style="font-family: 'Tangerine', serif;
              font-size: 48px;
              text-shadow: 4px 4px 4px #aaa;"><%= t('.sign_in') %></h3>
              <!-- <div class="login-page-content"> -->
                <!-- <div class="login-form"> -->
                  <!-- <h5 class="text-center">Welcome Back!</h5> -->
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-group">
                      <%# f.label :email %>
                      <i class="glyphicon glyphicon-user"></i><%= f.text_field :login, autofocus: true, autocomplete: 'login', class: 'form-control', placeholder: "Email or Username" %>
                    </div>

                    <div class="form-group">
                      <%# f.label :password %>
                     <i class="
glyphicon glyphicon-lock"></i><%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: "Password" %>
                    </div>
                
              <!-- </div> -->
                    <% if devise_mapping.rememberable? %>
                      <div class="form-group form-check" style="object-position: left;">
                        <%= f.check_box :remember_me, class: 'form-check-input'   %>
                        <%= f.label :remember_me, class: 'form-check-label' do %>
                          <%= resource.class.human_attribute_name('remember_me') %>
                        <% end %>
                      </div>
                    <% end %>

                    <div class="form-group">
                      <%= f.submit  t('.sign_in'), class: 'btn btn-primary' %>
                    </div>
                  <% end %>
               
